<div class="flex justify-between items-center">
    {% if label is defined %}
        <label for="{{ id }}" class="w-1/3">{{ label }}</label>
    {% endif %}
    <input type="{{ type }}" id="{{ id }}" name="{{ name }}" value="{{ value }}" placeholder="{{ placeholder }}"
           class="{% if bigInput is defined and true %}py-4 px-8{% else %}py-2 px-4{% endif %} rounded-lg relative {% if label is defined %}w-2/3{% else %}w-full{% endif %}
        {% if schema is defined and 'light' %}
        border-white text-white
        {% else %}
        border-dark-0 text-dark-0
        {% endif %}
        inline-block
        bg-transparent
        border border-solid
        transition-all ease-linear duration-200
        "/>
</div>